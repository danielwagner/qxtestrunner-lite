{
  "name"    : "testrunner",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],
/*
  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
  ],
*/
  "let" :
  {
    "APPLICATION"  : "testrunner",
    "QOOXDOO_PATH" : "../qooxdoo.trunk",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/cache",
    "ROOT"         : ".",
    "TEST_NAMESPACE" : "${APPLICATION}.test",
    //"TEST_NAMESPACE" : "qx.test.ui",
    "TEST_INCLUDE" : "${TEST_NAMESPACE}.*"
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "common" :
    {
      "include" :
      [
        "${APPLICATION}.Application",
        "${TEST_INCLUDE}"
      ],
      
      /* Needed for framework ui/theme tests */
      "exclude" :
      [
        "qx.theme.*"
      ],
      
      "=settings" :
      {
        "qx.version"     : "1.3-pre",
        "qx.application" : "${APPLICATION}.Application",
        "qx.testNameSpace" : "${TEST_NAMESPACE}"
        //"qx.disposerDebugLevel" : "2"
      },
      
      "variants" :
      {
        "testrunner.view" : ["console", "html"],
        "testrunner.testOrigin" : ["iframe", "inline"]
      }
    },
    
    "source-script" :
    {
      "compile-options" :
      {
        "paths" :
        {
          "file" : "${ROOT}/source/script/${APPLICATION}-{testrunner.view}-{testrunner.testOrigin}.js"
        }
      }
    },
    
    "build-script" :
    {
      "compile-options" :
      {
        "paths" :
        {
          "file" : "${BUILD_PATH}/script/${APPLICATION}-{testrunner.view}-{testrunner.testOrigin}.js"
        }
      }
    }
    
  }
}
